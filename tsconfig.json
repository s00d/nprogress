{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/types.ts"
  ],
  "files": [
    "src/index.ts",
    "src/types.ts"
  ]
}
